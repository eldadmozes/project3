pipeline {
    agent any
    
    stages {
        stage('Destroy EC2') {
            agent {
                label 'ec2'
            }
                   steps {   
                dir('/home/ubuntu/workspace/project3_TF') {
                    // sh 'terraform init'
                    sh 'terraform destroy -target=module.ec2 --auto-approve'
            }
        }
        }
    

        
